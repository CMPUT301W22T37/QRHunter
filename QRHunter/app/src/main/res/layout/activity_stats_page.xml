<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatsPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:text="Leader Board"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        >
    </TextView>

    <ListView
        android:id="@+id/all_highscores_listview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        >

        <Button
            android:layout_marginLeft="40sp"
            android:id="@+id/high_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:onClick="onHighScoresClick"
            android:text="Quality"
            android:textSize="15dp">


        </Button>

        <Button
            android:layout_marginLeft="20sp"
            android:id="@+id/total_scanned_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTotalScannedClick"
            android:text="Quantity"
            android:textSize="15dp">


        </Button>

        <Button
            android:id="@+id/total_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:onClick="onTotalSumClick"
            android:text="Overall"
            android:textSize="15dp">


        </Button>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:text="Personal Ranking"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        >
    </TextView>

    <TextView
        android:id="@+id/highest_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Highest Ranking Individual Score"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/lowest_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Lowest Ranking Individual Score"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/total_ranking_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Ranking For Total Number"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/total_ranking_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Ranking For Total Score"
        android:textSize="20dp">
    </TextView>

</LinearLayout>