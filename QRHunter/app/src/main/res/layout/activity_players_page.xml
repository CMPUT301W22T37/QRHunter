<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayersPage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Search All Players"
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            >
        </EditText>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:onClick="onSearchClick"
            android:text="Search"></Button>

        <Button
            android:id="@+id/scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:layout_marginLeft="20sp"
            >
        </Button>

    </LinearLayout>


    <TextView
        android:id="@+id/ranking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person's Ranking"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        >

    </TextView>

    <TextView
        android:id="@+id/display_highest_QR_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Scoring QR Code"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        >

    </TextView>

    <TextView
        android:id="@+id/display_total_ranking_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking For Total Number"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        >

    </TextView>

    <TextView
        android:id="@+id/display_ranking_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking For Total Score"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        >

    </TextView>

    <ListView
        android:id="@+id/qr_code_listview"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_marginTop="15sp"
        >

    </ListView>

</LinearLayout>